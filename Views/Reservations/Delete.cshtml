@model DogShelterMvc.Models.Reservation

@{
    ViewData["Title"] = "Smazat rezervaci";
}

<h1>Smazat rezervaci</h1>

<h3>Jste si jisti, že chcete smazat tuto rezervaci?</h3>
<div>
    <h4>Rezervace #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Datum přijetí</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfReceipt)</dd>
        <dt class="col-sm-2">Datum předání</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfTransfer)</dd>
        <dt class="col-sm-2">Pes</dt>
        <dd class="col-sm-10">@(Model.Pes?.Name ?? "Není přiřazen")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
    </form>
</div>

