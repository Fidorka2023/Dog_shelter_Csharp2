@model DogShelterMvc.Models.Log

@{
    ViewData["Title"] = "Detail logu";
}

<h1>Detail logu</h1>

<div>
    <h4>Log #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
        <dt class="col-sm-2">Uživatel</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CUser)</dd>
        <dt class="col-sm-2">Čas události</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EventTime)</dd>
        <dt class="col-sm-2">Tabulka</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TableName)</dd>
        <dt class="col-sm-2">Operace</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Operation)</dd>
        <dt class="col-sm-2">Stará hodnota</dt>
        <dd class="col-sm-10"><pre>@Html.DisplayFor(model => model.OldValue)</pre></dd>
        <dt class="col-sm-2">Nová hodnota</dt>
        <dd class="col-sm-10"><pre>@Html.DisplayFor(model => model.NewValue)</pre></dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
</div>

