@{
    ViewData["Title"] = "Domů";
    var isLoggedIn = Context.Session.GetString("UserId") != null;
}

<div class="text-center fade-in">
    <div class="mb-4">
        <i class="bi bi-heart-pulse-fill" style="font-size: 4rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>
    </div>
    <h1 class="display-4 fw-bold mb-3" style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Vítejte v systému útulku pro psy</h1>
    @if (!isLoggedIn)
    {
        <p class="lead text-muted mb-4">Pro přístup k aplikaci se prosím přihlaste.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-box-arrow-in-right me-2"></i>Přihlásit se
        </a>
        <p class="mt-4">
            <small class="text-muted">Nemáte účet? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-bold">Zaregistrujte se</a></small>
        </p>
    }
    else
    {
        <p class="lead text-muted">Správa psů, majitelů, útulků a dalších informací.</p>
    }
</div>

@if (isLoggedIn)
{
<div class="row mt-5 fade-in">
    <div class="col-md-4 mb-4">
        <div class="card home-card">
            <div class="card-body text-center">
                <div class="home-card-icon">
                    <i class="bi bi-heart-fill"></i>
                </div>
                <h5 class="card-title">Psi</h5>
                <p class="card-text text-muted">Správa psů v útulku</p>
                <a asp-controller="Dogs" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-1"></i>Zobrazit psy
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card home-card">
            <div class="card-body text-center">
                <div class="home-card-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h5 class="card-title">Majitelé</h5>
                <p class="card-text text-muted">Správa majitelů psů</p>
                <a asp-controller="Owners" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-1"></i>Zobrazit majitele
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card home-card">
            <div class="card-body text-center">
                <div class="home-card-icon">
                    <i class="bi bi-building-fill"></i>
                </div>
                <h5 class="card-title">Útulky</h5>
                <p class="card-text text-muted">Správa útulků</p>
                <a asp-controller="Shelters" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-1"></i>Zobrazit útulky
                </a>
            </div>
        </div>
    </div>
</div>
}



