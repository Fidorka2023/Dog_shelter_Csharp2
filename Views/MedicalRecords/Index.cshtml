@model IEnumerable<DogShelterMvc.Models.MedicalRecord>

@{
    ViewData["Title"] = "Zdravotní záznamy";
}

<h1>Zdravotní záznamy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Přidat nový záznam</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.DateRec)</th>
            <th>@Html.DisplayNameFor(model => model.Dog)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.DateRec)</td>
            <td>@(item.Dog?.Name ?? "Není přiřazen")</td>
            <td>@(item.Type?.ProcName ?? "Není přiřazena")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>

