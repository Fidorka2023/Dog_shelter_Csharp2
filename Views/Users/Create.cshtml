@model DogShelterMvc.Models.User

@{
    ViewData["Title"] = "Přidat uživatele";
}

<h1>Přidat nového uživatele</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uname" class="control-label">Uživatelské jméno</label>
                <input asp-for="Uname" class="form-control" />
                <span asp-validation-for="Uname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Heslo</label>
                <input type="password" name="Password" id="Password" class="form-control" required />
                <span asp-validation-for="Hash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perms" class="control-label">Oprávnění</label>
                <input asp-for="Perms" class="form-control" type="number" />
                <span asp-validation-for="Perms" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

