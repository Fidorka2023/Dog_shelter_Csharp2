@model DogShelterMvc.Models.User

@{
    ViewData["Title"] = "Smazat uživatele";
}

<h1>Smazat uživatele</h1>

<h3>Jste si jisti, že chcete smazat tohoto uživatele?</h3>
<div>
    <h4>@Model.Uname</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Uživatelské jméno</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Uname)</dd>
        <dt class="col-sm-2">Oprávnění</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Perms)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
    </form>
</div>

