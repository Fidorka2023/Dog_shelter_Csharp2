@model DogShelterMvc.Models.User

@{
    ViewData["Title"] = "Upravit uživatele";
}

<h1>Upravit uživatele</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Uname" class="control-label">Uživatelské jméno</label>
                <input asp-for="Uname" class="form-control" />
                <span asp-validation-for="Uname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="NewPassword" class="control-label">Nové heslo</label>
                <input type="password" name="NewPassword" id="NewPassword" class="form-control" placeholder="Ponechte prázdné, pokud nechcete změnit heslo" />
                <small class="form-text text-muted">Ponechte prázdné, pokud nechcete změnit heslo</small>
            </div>
            <div class="form-group">
                <label asp-for="Perms" class="control-label">Oprávnění</label>
                <input asp-for="Perms" class="form-control" type="number" />
                <span asp-validation-for="Perms" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Uložit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

