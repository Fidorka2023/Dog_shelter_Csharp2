@model IEnumerable<DogShelterMvc.Models.DogHistory>

@{
    ViewData["Title"] = "Historie psů";
}

<h1>Historie psů</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Přidat nový záznam</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfEvent)</th>
            <th>@Html.DisplayNameFor(model => model.EventDescription)</th>
            <th>@Html.DisplayNameFor(model => model.Pes)</th>
            <th>@Html.DisplayNameFor(model => model.Typ)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfEvent)</td>
            <td>@Html.DisplayFor(modelItem => item.EventDescription)</td>
            <td>@(item.Pes?.Name ?? "Není přiřazen")</td>
            <td>@Html.DisplayFor(modelItem => item.Typ)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>

