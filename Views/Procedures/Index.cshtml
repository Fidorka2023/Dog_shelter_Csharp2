@model IEnumerable<DogShelterMvc.Models.Procedure>

@{
    ViewData["Title"] = "Procedury";
}

<h1>Procedury</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">PÅ™idat novou proceduru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.ProcName)</th>
            <th>@Html.DisplayNameFor(model => model.DescrName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.ProcName)</td>
            <td>@Html.DisplayFor(modelItem => item.DescrName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>

