@model DogShelterMvc.Models.DogImage

@{
    ViewData["Title"] = "Přidat obrázek";
}

<h1>Přidat nový obrázek</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="form-group mb-3">
                <label for="file" class="control-label">Soubor obrázku <span class="text-danger">*</span></label>
                <input type="file" name="file" id="file" class="form-control" accept="image/*" required />
                <small class="form-text text-muted">Povolené formáty: JPG, JPEG, PNG, GIF, BMP (max 10MB)</small>
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="dogId" class="control-label">Přiřadit k psovi</label>
                <select name="dogId" id="dogId" class="form-control" asp-items="ViewBag.DogId">
                    <option value="">-- Vyberte psa (volitelné) --</option>
                </select>
                <small class="form-text text-muted">Pokud vyberete psa, obrázek mu bude automaticky přiřazen</small>
            </div>
            <div class="form-group mb-3">
                <label for="fileName" class="control-label">Název souboru</label>
                <input type="text" name="fileName" id="fileName" class="form-control" />
                <small class="form-text text-muted">Pokud není zadán, použije se název souboru</small>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

