@model DogShelterMvc.Models.DogImage

@{
    ViewData["Title"] = "Detail obrázku";
}

<h1>Detail obrázku</h1>

<div>
    <h4>@Model.FileName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
        <dt class="col-sm-2">Název souboru</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FileName)</dd>
        <dt class="col-sm-2">Obrázek</dt>
        <dd class="col-sm-10">
            @if (Model.ImageData != null)
            {
                <img src="@Url.Action("Image", "DogImages", new { id = Model.Id })" alt="@Model.FileName" style="max-width: 400px; max-height: 400px;" />
            }
            else
            {
                <span>Žádný obrázek</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Upravit</a>
    <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
</div>

