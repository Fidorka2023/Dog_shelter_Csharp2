@model DogShelterMvc.Models.Pavilion

@{
    ViewData["Title"] = "Upravit pavilon";
}

<h1>Upravit pavilon</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PavName" class="control-label">Název pavilonu</label>
                <input asp-for="PavName" class="form-control" />
                <span asp-validation-for="PavName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacityPav" class="control-label">Kapacita</label>
                <input asp-for="CapacityPav" class="form-control" type="number" />
                <span asp-validation-for="CapacityPav" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Uložit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

