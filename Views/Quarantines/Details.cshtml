@model DogShelterMvc.Models.Quarantine

@{
    ViewData["Title"] = "Detail karantény";
}

<h1>Detail karantény</h1>

<div>
    <h4>Karanténa #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
        <dt class="col-sm-2">Datum začátku</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BeginOfDate)</dd>
        <dt class="col-sm-2">Datum konce</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EndOfDate)</dd>
        <dt class="col-sm-2">Délka (dny)</dt>
        <dd class="col-sm-10">@((Model.EndOfDate - Model.BeginOfDate).TotalDays)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Upravit</a>
    <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
</div>

