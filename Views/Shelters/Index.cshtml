@model IEnumerable<DogShelterMvc.Models.Shelter>

@{
    ViewData["Title"] = "Útulky";
}

<h1>Útulky</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Přidat nový útulek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Telephone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Adresa)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@(item.Adresa != null ? item.Adresa.ToString() : "")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
            </td>
        </tr>
}
    </tbody>
</table>

