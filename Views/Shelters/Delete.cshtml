@model DogShelterMvc.Models.Shelter

@{
    ViewData["Title"] = "Smazat útulek";
}

<h1>Smazat útulek</h1>

<h3>Jste si jisti, že chcete smazat tento útulek?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Název</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Telephone)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
    </form>
</div>

